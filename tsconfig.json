{
  "compilerOptions": {
    "target": "es2024",
    "module": "NodeNext",
    "rootDir": "./src",
    "outDir": "dist",
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}